@model int?
@(Html.Kendo().DropDownListFor(m => m)
                .AutoBind(false)
                .OptionLabel("Select...")
                .DataTextField("Name")
                .DataValueField("Id")
                .DataSource(dataSource =>
                {
                    dataSource.Read(read => read.Action("GetDropDownListData", "Categories"))
                            .ServerFiltering(true);
                })); 


